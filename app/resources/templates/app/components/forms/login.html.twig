<form id="{{ id }}" method="post" action="{{ path(action) }}">
  <div class="form-group">
    <label for="email-login" class="col-form-label">E-mail address</label>
    <input id="email-login" name="email" type="email" class="form-control ipt-form-login" placeholder="example@email.com" required autofocus>
  </div>
  <div class="form-group">
    <label for="password-login" class="col-form-label">Password</label>
    <input id="password-login" name="password" type="password" class="form-control ipt-form-login" placeholder="Your password" minlength="5" maxlength="12" required>
  </div>
</form>
