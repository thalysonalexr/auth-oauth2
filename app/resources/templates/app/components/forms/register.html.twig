<form id="{{ id }}" action="{{ path(action) }}">
  <div class="form-group">
    <label for="name" class="col-form-label">Name</label>
    <input id="name" name="name" type="text" class="form-control ipt-form-register" placeholder="John Badge" required autofocus>
  </div>
  <div class="form-group">
    <label for="email" class="col-form-label">Email</label>
    <input id="email" name="email" type="email" class="form-control ipt-form-register" placeholder="example@email.com" required>
  </div>
  <div class="form-group">
    <label for="password" class="col-form-label">Password</label>
    <input id="password" name="password" type="password" class="form-control ipt-form-register" placeholder="Min 5 characters and maximum 12" minlength="5" maxlength="12" required>
  </div>
  <div class="form-group">
    <label for="conf-password" class="col-form-label">Confirm password</label>
    <input id="conf-password" type="password" class="form-control ipt-form-register" placeholder="Repeat your password" minlength="5" maxlength="12" required>
  </div>
</form>