{% extends '@layout/default.html.twig' %}

{% block title %}Profile{% endblock %}

{% block content %}

<section>
    <div class="wrapper container">
    {% if messages.logged is defined and messages.logged == true %}
        <div class="alert alert-success">{{ messages.message }}</div>
    {% endif %}

    {% if data.name is defined %}
        <h1>Welcome, {{ data.name }}!</h1>
    {% endif %}
    
    {% if data.id is defined and data.email %}
        <ul>
            <li>ID: {{ data.id }}</li>
            <li>E-mail: {{ data.email }}</li>
        </ul>
    {% endif %}
        <div>
            <form id="logout" method="post" action="{{ path('logout.post') }}">
                <div class="form-group">
                    <button type="submit" class="btn btn-danger" form="logout" title="Quit">Logout</button>
                </div>
            </form>
        </div>
    </div>
</section>
{% endblock %}
